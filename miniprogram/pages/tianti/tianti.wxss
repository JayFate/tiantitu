.container {
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  background-color: #ccc;
}

.outer-list {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  border: 1rpx solid white;
  align-items: center;
  box-sizing: border-box;
}

.left {
  display: flex;
  align-items: center;
  width: 90%;
  /* border: 1rpx solid green; */
}

.index {
  justify-content: center;
  width: 10%;
  text-align: center;
  align-items: stretch;
  /* border: 1rpx solid orchid; */
}

.inner-container {
  display: flex;
  flex-direction: column;
  width: 90%;
}

.inner-list {
  width: 100%;
}

.rank {
  width: 10%;
  text-align: center;
}

.blue {
  background-color: blue;
}

.red {
  background-color: red;
}
